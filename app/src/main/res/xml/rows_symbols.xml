<merge
    xmlns:app="http://schemas.android.com/apk/res/com.github.crvv.wubinput"
>
    <include
        app:keyboardLayout="@xml/key_styles_common" />
    <include
        app:keyboardLayout="@xml/key_styles_currency" />
    <Row
        app:keyWidth="10%p"
    >
        <include
            app:keyboardLayout="@xml/rowkeys_symbols1" />
    </Row>
    <Row
        app:keyWidth="10%p"
    >
        <include
            app:keyboardLayout="@xml/rowkeys_symbols2"
            app:keyXPos="5%p" />
    </Row>
    <Row
        app:keyWidth="10%p"
    >
        <Key
            app:keyStyle="toMoreSymbolKeyStyle"
            app:keyWidth="15%p"
            app:visualInsetsRight="1%p" />
        <include
            app:keyboardLayout="@xml/rowkeys_symbols3" />
        <Key
            app:keyStyle="deleteKeyStyle"
            app:keyWidth="fillRight"
            app:visualInsetsLeft="1%p" />
    </Row>
    <Row
        app:keyWidth="10%p"
        app:backgroundType="functional"
    >
        <Key
            app:keyStyle="toAlphaKeyStyle"
            app:keyWidth="15%p" />
        <include
            app:keyboardLayout="@xml/row_symbols4" />
        <Key
            app:keyStyle="enterKeyStyle"
            app:keyWidth="fillRight" />
    </Row>
</merge>
