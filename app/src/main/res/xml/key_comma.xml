<merge
    xmlns:app="http://schemas.android.com/apk/res/com.github.crvv.wubinput"
>
    <switch>
        <case
            app:keyboardLayoutSet="dvorak"
        >
            <Key
                app:keySpec="q"
                app:moreKeys="!text/morekeys_q,%"
                app:backgroundType="normal"
                app:keyStyle="settingsMoreKeysStyle" />
        </case>
        <case
            app:mode="url"
        >
            <Key
                app:keySpec="/"
                app:keyStyle="settingsMoreKeysStyle" />
        </case>
        <case
            app:mode="email"
        >
            <Key
                app:keySpec="\@"
                app:keyStyle="settingsMoreKeysStyle" />
        </case>
        <default>
            <Key
                app:keySpec="!text/keyspec_comma"
                app:keyLabelFlags="hasPopupHint"
                app:keyStyle="settingsMoreKeysStyle" />
        </default>
    </switch>
</merge>
