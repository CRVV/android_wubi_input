<merge
    xmlns:app="http://schemas.android.com/apk/res/com.github.crvv.wubinput"
>
    <Key
        app:keySpec="*"
        app:moreKeys="!text/morekeys_star" />
    <switch>
        <case
            app:languageCode="fa"
        >
            <Key
                app:keySpec="!text/keyspec_left_double_angle_quote"
                app:moreKeys="!text/morekeys_double_quote" />
            <Key
                app:keySpec="!text/keyspec_right_double_angle_quote"
                app:moreKeys="!text/morekeys_single_quote" />
        </case>
        <default>
            <Key
                app:keySpec="&quot;"
                app:moreKeys="!text/morekeys_double_quote" />
            <Key
                app:keySpec="\'"
                app:moreKeys="!text/morekeys_single_quote" />
        </default>
    </switch>
    <Key
        app:keySpec=":" />
    <Key
        app:keySpec="!text/keyspec_symbols_semicolon"
        app:moreKeys="!text/morekeys_symbols_semicolon" />
    <Key
        app:keySpec="!"
        app:moreKeys="!text/morekeys_exclamation" />
    <Key
        app:keySpec="!text/keyspec_symbols_question"
        app:moreKeys="!text/morekeys_question" />
</merge>
