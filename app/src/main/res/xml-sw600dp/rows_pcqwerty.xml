<merge
    xmlns:app="http://schemas.android.com/apk/res/com.github.crvv.wubinput"
>
    <include
        app:keyboardLayout="@xml/key_styles_common" />
    <Row
        app:keyWidth="7.0%p"
    >
        <include
            app:keyboardLayout="@xml/rowkeys_pcqwerty1" />
        <Key
            app:keyStyle="deleteKeyStyle"
            app:keyWidth="fillRight" />
    </Row>
    <Row
        app:keyWidth="7.0%p"
    >
        <Key
            app:keyStyle="tabKeyStyle"
            app:keyWidth="9.0%p" />
        <include
            app:keyboardLayout="@xml/rowkeys_pcqwerty2" />
    </Row>
    <Row
        app:keyWidth="7.0%p"
    >
        <Spacer
            app:keyWidth="10.0%p" />
        <include
            app:keyboardLayout="@xml/rowkeys_pcqwerty3" />
        <Key
            app:keyStyle="enterKeyStyle"
            app:keyWidth="fillRight" />
    </Row>
    <Row
        app:keyWidth="7.0%p"
    >
        <Key
            app:keyStyle="shiftKeyStyle"
            app:keyWidth="15.0%p" />
        <include
            app:keyboardLayout="@xml/rowkeys_pcqwerty4" />
        <Key
            app:keyStyle="shiftKeyStyle"
            app:keyXPos="-15.0%p"
            app:keyWidth="fillRight" />
    </Row>
    <include
        app:keyboardLayout="@xml/row_pcqwerty5" />
</merge>
