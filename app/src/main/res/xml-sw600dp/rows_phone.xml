<merge
    xmlns:app="http://schemas.android.com/apk/res/com.github.crvv.wubinput"
>
    <include
        app:keyboardLayout="@xml/key_styles_common" />
    <include
        app:keyboardLayout="@xml/key_styles_number" />
    <Row>
        <Key
            app:keySpec="-"
            app:keyStyle="numKeyStyle"
            app:keyWidth="10%p"
            app:backgroundType="functional" />
        <Key
            app:keySpec="+"
            app:keyStyle="numKeyStyle"
            app:keyWidth="10%p"
            app:backgroundType="functional" />
        <Key
            app:keyStyle="numPauseKeyStyle"
            app:keyWidth="10%p"
            app:backgroundType="functional" />
        <Key
            app:keyStyle="num1KeyStyle"
            app:keyXPos="31%p" />
        <Key
            app:keyStyle="num2KeyStyle" />
        <Key
            app:keyStyle="num3KeyStyle" />
        <Key
            app:keyStyle="deleteKeyStyle"
            app:keyXPos="-14%p"
            app:keyWidth="fillRight" />
    </Row>
    <Row>
        <Key
            app:keySpec=","
            app:keyStyle="numKeyStyle"
            app:keyWidth="10%p"
            app:backgroundType="functional" />
        <Key
            app:keySpec="."
            app:keyStyle="numKeyStyle"
            app:keyWidth="10%p"
            app:backgroundType="functional" />
        <Key
            app:keyStyle="numWaitKeyStyle"
            app:keyWidth="10%p"
            app:backgroundType="functional" />
        <Key
            app:keyStyle="num4KeyStyle"
            app:keyXPos="31%p" />
        <Key
            app:keyStyle="num5KeyStyle" />
        <Key
            app:keyStyle="num6KeyStyle" />
        <Key
            app:keyStyle="enterKeyStyle"
            app:keyXPos="-14%p"
            app:keyWidth="fillRight" />
    </Row>
    <Row>
        <Key
            app:keySpec="("
            app:keyStyle="numKeyStyle"
            app:keyWidth="10%p"
            app:backgroundType="functional" />
        <Key
            app:keySpec=")"
            app:keyStyle="numKeyStyle"
            app:keyWidth="10%p"
            app:backgroundType="functional" />
        <Key
            app:keySpec="N"
            app:keyStyle="numKeyStyle"
            app:keyWidth="10%p"
            app:backgroundType="functional" />
        <Key
            app:keyStyle="num7KeyStyle"
            app:keyXPos="31%p" />
        <Key
            app:keyStyle="num8KeyStyle" />
        <Key
            app:keyStyle="num9KeyStyle" />
        <!-- Note: This Spacer prevents the above key from being marked as a right edge key. -->
        <Spacer />
    </Row>
    <Row>
        <Key
            app:keyStyle="tabletNumSpaceKeyStyle"
            app:keyWidth="30%p" />
        <Key
            app:keyStyle="numStarKeyStyle"
            app:keyXPos="31%p" />
        <Key
            app:keyStyle="num0KeyStyle" />
        <Key
            app:keySpec="\#"
            app:keyStyle="numKeyStyle" />
    </Row>
</merge>
