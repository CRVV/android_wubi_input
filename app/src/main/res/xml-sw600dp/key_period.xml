<merge
    xmlns:app="http://schemas.android.com/apk/res/com.github.crvv.wubinput"
>
    <!-- The table period key which may have different label depending on locale -->
    <!-- Kept as a separate file for cleaner overriding by an overlay.  -->
    <switch>
        <case
            app:languageCode="hi"
            app:keyboardLayoutSet="hindi_compact"
        >
            <!-- U+0964: "ред" DEVANAGARI DANDA -->
            <Key
                app:keySpec="\u0964"
                app:keyLabelFlags="hasPopupHint"
                app:moreKeys="!autoColumnOrder!8,\\,,.,',#,),(,/,;,@,:,-,&quot;,+,\\%,&amp;"
                app:backgroundType="functional" />
        </case>
        <case
            app:keyboardLayoutSet="dvorak"
        >
            <Key
                app:keySpec="\?"
                app:moreKeys="!text/morekeys_tablet_period,!text/morekeys_question" />
        </case>
        <default>
            <Key
                app:keySpec="!text/keyspec_tablet_period"
                app:keyHintLabel="!text/keyhintlabel_tablet_period"
                app:keyLabelFlags="hasPopupHint"
                app:moreKeys="!text/morekeys_tablet_period"
                app:backgroundType="functional"
                app:keyStyle="hasShiftedLetterHintStyle" />
        </default>
    </switch>
</merge>
